//Rotated & Flipped Icons 
.{$mdi-css-prefix}-rotate-45deg
  mdi-icon-rotate(45deg, 1)

.{$mdi-css-prefix}-rotate-90deg
  mdi-icon-rotate(90deg, 1)

.{$mdi-css-prefix}-rotate-135deg
  mdi-icon-rotate(135deg, 1)

.{$mdi-css-prefix}-rotate-180deg
  mdi-icon-rotate(180deg, 2)

.{$mdi-css-prefix}-rotate-225deg
  mdi-icon-rotate(225deg, 2)

.{$mdi-css-prefix}-rotate-270deg
  mdi-icon-rotate(270deg, 3)

.{$mdi-css-prefix}-rotate-315deg
  mdi-icon-rotate(315deg, 3)

.{$mdi-css-prefix}-flip-h
  mdi-icon-flip(-1, 1, 0)

.{$mdi-css-prefix}-flip-v
  mdi-icon-flip(1, -1, 2)